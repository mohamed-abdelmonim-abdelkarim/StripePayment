@{
    ViewData["Title"] = "Payment Failed";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger text-center shadow-lg rounded p-4">
                <i class="bi bi-x-circle-fill display-1 text-danger"></i> 
                <h2 class="mt-3">Payment Failed</h2>
                <p class="lead">@ViewBag.Message</p>
                <a href="/" class="btn btn-primary btn-lg mt-3">Try Again</a>
            </div>
        </div>
    </div>
</div>
